@if (Loading)
{
    <div class="row">
        <div class="col-md-12 d-flex align-items-center text-center">
            <div class="mx-auto d-block loader-container">
                <img src="/images/logo.png" alt="loader" style="width:300px; height:auto;" />
                <p class="loader-text">Loading...</p>
            </div>
        </div>
    </div>
}
else
{
    @ChildContent
}

@code {
    [Parameter]
    public bool Loading { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
