@code {
    private bool loading = false;

    private ArchiveViewModel model = new();

    private List<StreamingList.StreamingListItem> streamings = [];

    private StreamingsSearchParameters search = new();

    private async ValueTask<ItemsProviderResult<StreamingList.StreamingListItem>> LoadStreamings(ItemsProviderRequest request)
    {
        await LoadStreamingsAsync();

        if (!model.HasNextPage)
        {
            return new([], 100);
        }

        return new(model.Streamings, 100);
    }

    private async Task LoadStreamingsAsync()
    {
        loading = true;

        try
        {
            model = await Service.GetStreamingsArchiveAsync(search);
        }
        finally
        {
            loading = false;
        }
    }

    private async Task SearchStreamingsAsync()
    {
        await LoadStreamingsAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        //search.Page = Page ?? 1;
        await LoadStreamingsAsync();
    }
}
